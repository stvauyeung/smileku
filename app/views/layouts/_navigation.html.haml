.navbar.navbar-inverse.navbar-fixed-top{role: "navigation"}
	.container
		.navbar-header
			%a.btn.navbar-toggle{"data-target" => "#collapse", "data-toggle" => "collapse"}
				%span.sr-only Toggle navigation
				%span.icon-bar
				%span.icon-bar
				%span.icon-bar
			- if logged_in?
				=link_to "&infin;".html_safe, root_path, :class => "navbar-brand"
			- else
				=link_to "&infin;".html_safe, front_path, :class => "navbar-brand"
		.nav-collapse#collapse
			- if logged_in?
				%ul.nav.navbar-nav.navbar-right
					%li
						=link_to "Invite", new_invite_path
					%li
						=link_to "Profile", user_path(current_user)
					%li
						=link_to "Logout", logout_path
			- else
				%ul.nav.navbar-nav.navbar-right
					%li
						=link_to "Sign Up", registration_path
					%li
						=link_to "Login", login_path
					%li
						=link_to "About", faq_path