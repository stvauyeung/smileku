<table border="0" cellspacing="0" cellpadding="0" align="center">
	<tbody>
		<tr>
			<td style="font-weight: bold; font-size: 18px; line-height: 24px; color: #D03C0F">
				<%= @user.username %>, you have a new follower on Smileku.
			</td>
		</tr>
		<tr>
	    <td style="text-align:center;padding-top:15px;">
	      <%= link_to image_tag(@follower.photo, size: "120x120"), user_url(@follower, :utm_source => "appmailer", :utm_medium => "email", :utm_campaign => "new_follower") %>
	    </td>
  	</tr>
  	<tr>
  		<td style="font-size:14px;padding-top:5px;text-align:center;">
  			<%= link_to @follower.username, user_url(@follower, :utm_source => "appmailer", :utm_medium => "email", :utm_campaign => "new_follower") %>
  		</td>
  	</tr>
  	<tr>
  		<td style="font-size:11px;font-weight:italic;padding-top:5px;padding-left:5px;padding-right:5px;text-align:center;">
  			<%= @follower.bio %>
  		</td>
  	</tr>
  	<tr>
  		<td style="font-size:12px;padding-top:5px;padding-left:5px;padding-right:5px;text-align:center;">
  			<%= @follower.location %>
  		</td>
  	</tr>
	</tbody>
</table>
<br><br>