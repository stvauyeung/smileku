- meta :title => "Create your Smileku account", :description => "Join Smileku and create stories with other writers."
%section.sign_in.container
  .row
    .col-md-4.col-md-offset-1
      %h1 Create an account
      = bootstrap_form_for @user do |f|
        %fieldset.form-group
          = f.text_field :username, class: "form-control"
          = f.text_field :email, class: "form-control"
          = f.password_field :password, class: "form-control"
          = f.password_field :password_confirmation, class: "form-control"
        %fieldset.action
          = f.submit "Create Account", :class => "btn"
      %br
      =link_to "Already have an account?", login_path