%section.container
  .row-fluid
    %ul.nav.nav-tabs
      %li.activities.active= link_to '<i class="icon-book"> Read</i>'.html_safe, '#'
      %li.activities= link_to '<i class="icon-pencil"> Write</i>'.html_safe, new_story_path
    .stories.row
      %header
        %h2 Recent Stories
      %br
      - @stories.each do |story|
        .story.span2
          = link_to image_tag("#{story.large_cover.preview}"), story_path(story)
          %p= link_to "#{story.truncated_title} by #{story.user.username}", story_path(story)
