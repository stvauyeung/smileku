%section.container
	.row
		.span5
			.row.span4
				=image_tag(@story.large_cover_url)
			.row.span4
				%h2= @story.title
		.span7
			.row
				%h3 #{@ku.number_in_story} by #{link_to @ku.author_name, user_path(@ku.user)}
				.well
					%p.ku_body= @ku.body
			.row
				=link_to "Add a Ku", new_story_ku_path(story_id: @story.id, parent_id: @ku.id), class: "btn btn-large"
				.btn-group.pull-right
					=link_to 'Next', url_for(@ku.next_ku), class: 'btn btn-large'
					=link_to 'Skip', url_for(@ku.skip_ku), class: 'btn btn-large'
					=link_to 'Random', url_for(@ku.random_ku), class: 'btn btn-large'