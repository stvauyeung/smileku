.row.ku_navigation.italic
	.col-md-6.reverse-margin#vote_block
		=link_to "up vote", vote_ku_path(@ku, value: true), method: :post
		&bull;
		=link_to "down vote", vote_ku_path(@ku, value: false), method: :post
		%p{id: "ku_#{@ku.id}_votes"}= "total score: #{@ku.vote_count}"
	.col-md-6.text-right
		- unless @ku.prev_ku.nil?
			=link_to '<<prev', url_for(@ku.prev_ku)
		- unless @ku.alt_ku.nil?
			=link_to 'alternate', url_for(@ku.alt_ku), class: 'bold'
		- unless @ku.next_ku.nil?
			=link_to 'next>>', url_for(@ku.next_ku)