.row
	.btn-group.pull-right
		=link_to_unless @ku.next_ku.nil?, 'Next', url_for(@ku.next_ku), class: 'btn btn-large'
		=link_to_unless @ku.prev_ku.nil?, 'Prev', url_for(@ku.prev_ku), class: 'btn btn-large'
		=link_to_unless @ku.alt_ku.nil?, 'Alt', url_for(@ku.alt_ku), class: 'btn btn-large'
