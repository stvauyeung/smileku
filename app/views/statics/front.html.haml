.container
	.row
		.col-md-6.front-left
			%h1.giant Smileku
			%h1 Short bursts of creativity <br/> to help you write more <br/> and grow as a writer
		.col-md-4.col-md-offset-1.front-right
			- if logged_in?
				= link_to "Start a story", new_story_path, class: "btn btn-info btn-large btn-block"
			- else
				= link_to "Sign up now", registration_path, class: "btn btn-info btn-large btn-block"
				= link_to "Login", login_path, class: "btn btn-default btn-large btn-block"
				%h4.pull-right= link_to "Learn more >", faq_path
	%hr
		#content-margin
			.row
				%h1 Stories being written
				- @stories.each do |story|
					.story
						= link_to image_tag("#{story.large_cover.preview}", class: 'story_image'), story_path(story)
						%p= link_to "#{story.truncated_title} by #{story.user.username}", story_path(story)
			.row
				%h1 Articles for writers
				- @posts.each do |post|
					.front-post
						= link_to image_tag("#{post.mrec}", class: 'story_image'), post_path(post)
			%h4= link_to "More articles >", posts_path
	%hr
	.row.center
		- if logged_in?
			= link_to "Start a story", new_story_path, class: "btn btn-large btn-info"
		- else
			%h1 Ready to write?
			= link_to "Sign up now", registration_path, class: "btn btn-info btn-large"